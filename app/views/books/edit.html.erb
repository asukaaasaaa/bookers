<div class="body">
  <h1 id ="edit_title">Editing Book</h1><br>

    <% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  <div class="edit">
    <%= form_with model: @book do |f| %>
    <div class="field">
      <label>Title</label>
      <div class="book-title"><%= f.text_field :title %></div>
    </div>
    <div class="field">
      <label>Body</label>
      <div class="book-body"><%= f.text_area :body %></div>
    </div>
    <div class="update">
      <%= f.submit 'Update Book' %>
    </div>
    <% end %>
      <a class="show-link"><%= link_to "Show", book_path(@book.id) %></a>
      |
      <a class="index-link"><%= link_to "Back", books_path %></a>
  </div>
</div>