<div class=body>
<div><%= flash[:alert] %></div>

<h1 class="title">Books</h1>
<table>
  <thead>
  <tr>
   <th class="colum-header">Title</th>
   <th class="colum-header">Body</th>
   <th class="colum-header"></th>
   </tr>
   </thead>
 <tbody>
    <tr><% @books.each do |book| %></tr>
   <td class="cell"><%= book.title %></td>
   <td class="cell"><%= book.body %></td>
   <td class="cell2"><%= link_to "Show", book_path(book.id)  %></td>
   <td class="cell2"><%= link_to "Edit", edit_book_path(book.id)  %></td>
   <td class="cell2"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  <% end %>
 </tbody>
</table>

<div class="newbook">
<h2 class="title2">New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book do |f| %>
  <label>Title</label><br>
  <div class="book-title"><%= f.text_field :title %></div>
  <label>Body</label><br>
  <div class="book-body"><%= f.text_area :body %></div>
<div =create>
 <%= f.submit 'Create Book'%>
</div>
<% end %>
</div>