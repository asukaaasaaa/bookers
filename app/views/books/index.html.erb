<div class=body>
<div><%= flash[:alert] %></div>

<h1 class="title">Books</h1>
<table>
  <thead>
  <tr>
   <th class="colum-header">Title</th>
   <th class="colum-header">Body</th>
   <th class="colum-header"></th>
   </tr>
   </thead>
 <tbody>
    <tr><% @books.each do |book| %></tr>
   <td class="cell"><%= book.title %></td>
   <td class="cell"><%= book.body %></td>
   <td class="show-link"><%= link_to "Show", book_path(book.id)  %></td>
   <td class="edit-link"><%= link_to "Edit", edit_book_path(book.id)  %></td>
   <td class="destroy-link"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  <% end %>
 </tbody>
</table>

<div class="newbook">
<h2 class="title2">New book</h2>
<div id="error_explanatuon">
  <% if @book.errors.any? %>
   <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 </div>
<% end %>
<%= form_with model: @book do |f| %>
<div class="field">
  <div class="fild_with_erros">
    <label>Title</label>
  </div>
  <div class="fild_with_erros">
    <div class="book-title"><%= f.text_field :title %></div>
  </div>
<div class="field">
  <div class="fild_with_erros">
    <label>Body</label>
  </div>
  <div class="fild_with_erros">
    <div class="book-body"><%= f.text_area :body %></div>
  </div>
<div =create>
 <%= f.submit 'Create Book'%>
</div>
<% end %>
</div>